{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es5"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "baseUrl": "./node_modules",
    "esModuleInterop": true,
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules"]
}
