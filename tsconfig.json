{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES6",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
  },
  "include": ["src//*", "__tests__//*"],
  "exclude": ["node_modules"]
}
